        <ul class="items">
          <% for(let i=0; i < showItem.length; i++) {%>
          <li class="item">
            <% if(showItem[i].platform === "prime") {%>
            <span class="completed"><%= showItem[i].title%></span>
            <img
              height="32"
              width="32"
              src="https://cdn.jsdelivr.net/npm/simple-icons@v7/icons/primevideo.svg"
            />
            <% }else if(showItem[i].platform=== "hulu"){ %>
              <span><%= showItem[i].title%></span>
              <img
              height="32"
              width="32"
              src="https://cdn.jsdelivr.net/npm/simple-icons@v7/icons/hulu.svg"
            />
            <% }else if(showItem[i].platform=== "hboMax"){ %>
              <span><%= showItem[i].title%></span>
              <img
              height="32"
              width="32"
              src="https://cdn.jsdelivr.net/npm/simple-icons@v7/icons/hbo.svg"
            />
            <% }else if(showItem[i].platform=== "netflix"){ %>
            <span><%= showItem[i].title%></span>
            <img
              height="32"
              width="32"
              src="https://cdn.jsdelivr.net/npm/simple-icons@v7/icons/netflix.svg"
            />
            <% }else { %>
              <span><%= showItem[i].title%></span>
            <% } %>
          </li>
          <% } %>
        </ul>

        <section id="moviesList">
          <table>
            <thead>
              <tr>
                <th>test header</th>
                <td>primevideo</td>
                <td>netflix</td>
                <td>hulu</td>
                <td>
                  <img
                    height="32"
                    width="32"
                    src="https://unpkg.com/simple-icons@v7/icons/[ICON SLUG].svg"
                  />
                </td>
              </tr>
            </thead>
            <tbody>
              <tr>
                <td>test cell</td>
                <td>
                  <img
                    height="32"
                    width="32"
                    src="https://cdn.jsdelivr.net/npm/simple-icons@v7/icons/primevideo.svg"
                  />
                </td>

                <td>
                  <img
                    height="32"
                    width="32"
                    src="https://cdn.jsdelivr.net/npm/simple-icons@v7/icons/netflix.svg"
                  />
                </td>

                <td>
                  <img
                    height="32"
                    width="32"
                    src="https://cdn.jsdelivr.net/npm/simple-icons@v7/icons/hulu.svg"
                  />
                </td>
              </tr>
            </tbody>
          </table>
        </section>

        <!-- ADDING TO THE DATA BASE VIA POST REQUEST -->
        <h2>Add Some Shit:</h2>
        <form action="/addItem" method="POST" class="container">
          <input
            type="text"
            class="flexItem"
            placeholder="Title"
            name="title"
          />

          <select class="flexItem" name="type" id="showItem">
            <!-- <option value="">--Please choose a type</option> -->
            <option selected value="movie">Movie</option>
            <option value="show">Show</option>
          </select>

          <select class="flexItem" name="platform" id="platform">
            <option selected value="netflix">Netflix</option>
            <option value="hulu">Hulu</option>
            <option value="hboMax">HBO Max</option>
            <option value="prime">Prime</option>
            <option value="other">Other</option>
          </select>

          <button class="flexItem" type="submit">Submit</button>
        </form>

        <script src="js/main.js"></script>
      </body>
    </html>
  </body>
